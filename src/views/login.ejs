<body class="px-5">
    <%- include('../views/nav.ejs') %>
        <div class='container m-auto p-5' style="border-radius: 50px; background: #f8f9fa; box-shadow:  20px 20px 60px #bebebe, -20px -20px 60px #ffffff; width: 500px;">
            <form class="row g-3 mx-2" action="/api/login" method="post">
                <h2 class="text-center text-uppercase fw-bold">LOGIN</h2>
                <div class="form-group mb-3">
                  <label for = "name">Username <s style="color: red;">*</s></label>
                  <input type="text" class="form-control" id="name" name="name" placeholder="Enter username">
                </div>
                <div class="form-group mb-3">
                  <label for="password">Password <s style="color: red;">*</s></label>
                  <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                </div>
                <div class="d-flex justify-content-center align-items-center">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
              </form>
        </div>

        <div class="foot">
            <%- include('../views/footer.ejs') %>
        </div>
</body>
